---
import Starfield from "../components/starfield.astro";
import oceanVideo from "../assets/ocean_aerial_view.mp4";

const widths = [450, 800];
const sizes = "(min-width: 640px) 42vw, 67vw";
---

<section class="relative h-full">
    <video autoplay muted loop id="bg-video">
        <source src={oceanVideo} type="video/mp4">
        Your browser does not support HTML5 video.
    </video>
    <div class="overlay"></div>
    <div class="relative grid h-full place-items-center sm:grid-cols-2">
      <h2 class="flex flex-col items-center gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-end">
        <div class="gradient-text text-center font-extrabold tracking-tighter text-6xl md:text-8xl text-shadow">
          Cypriot Youth
          <br /> United 
          <br /> 
          Through Education.
        </div>
      </h2>
      <div class="w-2/3 max-w-3xl self-start sm:w-10/12 sm:self-auto sm:justify-self-start flex justify-center">
        <button id="learn-more" class="bg-yellow-500 text-black font-bold py-2 px-4 rounded hover:bg-yellow-400 transition-colors duration-200">
          Learn More
        </button>
      </div>
    </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

<style>
  #bg-video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.0); /* Semi-transparent white overlay */
    z-index: -1;
  }

  @keyframes float {
    0% {
      transform: translate3d(0, 0, 0);
    }

    100% {
      transform: translate3d(0, 30px, 0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    #astronaut {
      animation: none;
    }

    :global(#starfield) {
      display: none;
    }

    #splash-bg-fallback {
      display: block;
    }
  }
</style>

<script>
  document.getElementById('learn-more').addEventListener('click', function() {
    document.getElementById('more-info').scrollIntoView({ behavior: 'smooth' });
  });
</script>
